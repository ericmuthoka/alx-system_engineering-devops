#!/usr/bin/env bash
# Bash script to check information about the "school" file.

if [ -e "school" ]; then
    echo "school file exists"
    if [ -s "school" ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi

    if [ -f "school" ]; then
        echo "school is a regular file"
    else
        # No output needed here, as case is forbidden, and we've already checked the existence and regularity.
        :
    fi
else
    echo "school file does not exist"
fi
